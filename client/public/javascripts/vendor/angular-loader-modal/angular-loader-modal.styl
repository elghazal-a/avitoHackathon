@import 'nib';

#angular_loader_modal {
    display:block;
    width:100%;
    height:100%;
    position:fixed;
    top:0; left:0;

    z-index:1337;

    visibility:visible;
    opacity:1;

    background:rgba(0,0,0, 0.8);
    transition:opacity 1s ease-in;

    &.hide {
        visibility:hidden;
        opacity:0;

        .spinner {
            display:none;
        }
    }

    .spinner {
        position: absolute;
        margin: auto;
        top:0; right:0; left:0; bottom:0;
        height:60px;
        width:60px;
        border:6px solid rgba(255,255,255,0.15);
        border-radius:100%;
        animation:infiniteRotation .6s infinite linear;

        &:before {
            content:"";
            display:block;
            position:absolute;
            left:-6px; top:-6px;
            height:100%;
            width:100%;
            border:6px solid transparent;
            border-top:6px solid rgba(255,255,255,0.8);
            border-radius:100%;
        }
    }
}

@keyframes infiniteRotation {
   from { transform: rotate(0deg); }
   to { transform: rotate(359deg); }
}
